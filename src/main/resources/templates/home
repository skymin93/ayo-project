<script>
	
	function filterCities() {
    	var input = searchInput.value.trim().toUpperCase();
    	var container = document.getElementById("imgContainer");
   		var images = container.getElementsByClassName("cityImg");
    	var texts = container.getElementsByClassName("cityText");
    	var foundMatch = false;

    	for (var i = 0; i < images.length; i++) {
        	var image = images[i];
        	var cityName1 = image.getAttribute("data-cityName1") || "";
       		var cityName3 = image.getAttribute("data-cityName3") || "";
        	var upperCaseCityName1 = cityName1.trim().toUpperCase();
        	var upperCaseCityName3 = cityName3.trim().toUpperCase();

        if (upperCaseCityName1.includes(input) || upperCaseCityName3.includes(input)) {
            // Show the matched image
            image.classList.add("matched"); // Add a class to the matched images
            image.style.display = "inline-block";
            foundMatch = true;

        } else {
            image.style.display = "none";
            image.classList.remove("matched");
        }
    }
    
    	for (var j = 0; j < texts.length; j++) {
        	var text = texts[j];
       		var associatedImageId = text.getAttribute("data-id");
        	var img = container.querySelector('.cityImg[data-id="' + associatedImageId + '"]');
        	var cityName1 = img.getAttribute("data-cityName1") || "";
        	var cityName3 = img.getAttribute("data-cityName3") || "";
        	var upperCaseCityName1 = cityName1.trim().toUpperCase();
        	var upperCaseCityName3 = cityName3.trim().toUpperCase();
        	var textShouldBeVisible = (upperCaseCityName1.includes(input) || upperCaseCityName3.includes(input));

        	text.style.display = textShouldBeVisible ? "" : "none";
    }

    	if (!foundMatch) {
       		closeModal();
    }
} 
    
	function openModal(id) {
    	var modal = document.getElementById("myModal");
    	var img = document.getElementsByClassName("cityImg")[id-1];
    	var modalImg = document.getElementById("modalImg");
    	var cityName1 = img.getAttribute("data-cityName1") || "";
    	var cityName2 = img.getAttribute("data-cityName2") || "";
    	var cityInfo = img.getAttribute("data-cityInfo") || "";
    	modal.style.display = "block";
    	modalImg.src = img.getElementsByTagName("image")[0].getAttribute("xlink:href");
    	document.getElementById("cityName1").innerHTML = cityName1;
    	document.getElementById("cityName2").innerHTML = cityName2;
		document.getElementById("cityInfo").innerHTML = cityInfo;
}

    function closeModal() {
        var modal = document.getElementById('myModal');
        modal.style.display = "none";
    }

    window.onclick = function(event) {
        var modal = document.getElementById('myModal');
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>

